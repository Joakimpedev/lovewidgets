{
  "expo": {
    "name": "LoveWidgets",
    "slug": "LoveWidgets",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lovewidgets",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.lovewidgets.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.lovewidgets.data"
        ],
        "aps-environment": "development"
      },
      "buildNumber": "2",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "LoveWidgets needs access to your photos to set your profile picture and add images to your scrapbook.",
        "NSPhotoLibraryAddUsageDescription": "LoveWidgets needs permission to save images to your photo library when you share creations.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "usesAppleSignIn": true
    },
    "android": {
      "package": "com.lovewidgets.app",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#E6F4FE",
          "sounds": []
        }
      ],
      "expo-apple-authentication",
      "./plugins/withIOSWidget",
      "./plugins/withAndroidWidget"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3e7a71c6-9779-42ca-88b9-ba578c28d007"
      }
    },
    "owner": "joakimpe"
  }
}
